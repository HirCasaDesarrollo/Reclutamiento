@model IEnumerable<Prueba_BackEnd_Jr.Models.Ajuste>
@{
    ViewData["Title"] = "Requerimiento 2";
}

<div>
    <h2>Requerimiento 2</h2>
    <p class="fst-italic">"Dadas las fechas de pago se debe de actualizar el MontoTotal de la tabla Ajuste a partir de los pagos aplicados de la tabla Pagos."</p>
    <p>Presion el boton de "Solucionar requerimiento" para aplicar la solucion.</p>
    <p class="bg-info fst-italic p-2 m-1 text-center">@ViewData["mensaje"]</p>

@*    <p class="bg-warning fw-bold fst-italic p-1">Aviso: ASP formatea automaticamente los textos mostrados gracias al "DisplayNameFor", por lo que se tiene que dirigir en la consola para ver la resolucion del requerimiento</p>*@
    <div class="row mt-4">
        <div class="col-12 col-md-6">
            <h3>Tabla Ajustes</h3>
        </div>
        <div class="col-12 col-md-6 text-center text-md-end">
            <a class="text-center text-md-end btn btn-primary" asp-area="" asp-controller="Home" asp-action="Prueba2Solucion">Solucionar requerimiento</a>
        </div>
    </div>

    <table class="table text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cliente.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MontoTotal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Adeudo)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => c.Cliente.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => c.MontoTotal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => c.Adeudo)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>